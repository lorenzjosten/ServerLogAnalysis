<%= form_with model: [@analysis, Timeframe.new], url: analysis_timeframe_path(@analysis), method: :post, html: {class: 'form form-horizontal center', id: 'select-datetime-form'} do |form| %>
  <div class='form-group row' id: 'select_start_datetime'>
    <label for='start_date' class='col col-md-2 col-form-label'>Start Date</label>
    <div class='col col-md-4'>
      <%= form.date_field 'start_dt[date]', {class: 'form-control', id: 'start_date_field'} %>
    </div>
    <label for='start_time' class='col col-md-2 col-form-label'>Start Time</label>
    <div class='col col-md-4'>
      <%= form.time_field 'start_dt[time]', {class: 'form-control', id: 'start_time_field'} %>
    </div>
  </div>
  <div class='form-group row' id: 'select_end_datetime'>
    <label for='end_date' class='col col-md-2 col-form-label'>End Date</label>
    <div class='col col-md-4'>
      <%= form.date_field 'end_dt[date]', {class: 'form-control', id: 'end_date_field'} %>
    </div>
    <label for='end_time' class='col col-md-2 col-form-label'>End Time</label>
    <div class='col col-md-4'>
      <%= form.time_field 'end_dt[time]', {class: 'form-control', id: 'end_time_field'} %>
    </div>
  </div>
  <div class='form-group row'>
    <%= form.submit 'Set Timeframe', {class: 'btn btn-primary btn-block', id: 'timeframe_submit_button'} %>
  </div>
<% end %>
