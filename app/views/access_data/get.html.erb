<%= content_tag :div, class: "timeframe_options_class", data: {
  startdate: @plot_data.start_date,
  enddate: @plot_data.end_date,
  starttime: @plot_data.start_time,
  endtime: @plot_data.end_time,
  mindate: @plot_data.min_date,
  maxdate: @plot_data.max_date,
  mintime: (@plot_data.min_time if @plot_data.start_date == @plot_data.end_date),
  maxtime: (@plot_data.max_time if @plot_data.start_date == @plot_data.end_date) } do %>
<% end %>

<%= content_for :timeframe_select_defaults do %>
  <script type="text/javascript">
    <%= render partial: 'timeframes/timeframe_select_defaults.js' %>
  </script>
<% end %>

<%= form_with model: @analysis.timeframe, html: {class: 'form-horizontal center'} do |form| %>
  <div class='form-group row'>
    <label for='start_date' class='col col-md-2 col-form-label'>Start Date</label>
    <div class='col col-md-4'>
      <input id='start_date' type='date' name='timeframe[start_date]' class='form-control'>
    </div>
    <label for='start_time' class='col col-md-2 col-form-label'>Start Time</label>
    <div class='col col-md-4'>
      <input id='start_time' type='time' name='timeframe[start_time]' class='form-control'>
    </div>
  </div>
  <div class='form-group row'>
    <label for='end_date' class='col col-md-2 col-form-label'>End Date</label>
    <div class='col col-md-4'>
      <input id='end_date' type='date' name='timeframe[end_date]' class='form-control'>
    </div>
    <label for='end_time' class='col col-md-2 col-form-label'>End Time</label>
    <div class='col col-md-4'>
      <input id='end_time' type='time' name='timeframe[end_time]' class='form-control'>
    </div>
  </div>
  <div class='form-group row' id="submit-button">
    <input type='submit' value='Set Timeframe' class='btn btn-primary btn-block'>
  </div>
<% end %>

<%= yield :timeframe_select_defaults %>
